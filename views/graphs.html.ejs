<% include partials/header.html.ejs %>

  <script>
    var chartData = <%- v_chartData %>;
  </script>

  <header class="main-header grid">
    <div class="campaign-details grid-cell grid7">
      <div class="campaign-details__brand grid-cell">
        <h5>Brand</h5>
        <p><%= chartData.campaign.brand %></p>
      </div>
      <div class="campaign-details__name grid-cell">
        <h5>Name</h5>
        <p><%= chartData.campaign.name %></p>
      </div>
      <div class="campaign-details__objective grid-cell">
        <h5>Objective</h5>
        <p><%= chartData.campaign.objective %></p>
      </div>
      <div class="campaign-details__vertical grid-cell">
        <h5>Vertical</h5>
        <p><%= chartData.campaign.vertical %></p>
      </div>
    </div>

    <div id="chart--cProg" class="campaign-progress grid-cell grid4">
        <!-- Plotly graph -->
    </div>
    <div class="campaign-edit grid-cell grid1">
      <button class="icon-only">
        <svg viewBox="0 0 300 300" preserveAspectRatio="xMinYMid meet">
          <use x="0" y="0" href="#menu" />
        </svg>
        <span>Menu</span>

      </button>
      <button class="icon-only">
        <svg viewBox="0 0 300 300" preserveAspectRatio="xMinYMid meet">
          <use x="0" y="0" href="#comments-old" />
        </svg>
        <span>Comments</span>
      </button>
    </div>
  </header>

  <div class="main grid">

    <div class="data-filter grid-cell grid2 no-gutter">

      <div class="grid-cell">

        <h2>Group by:</h2>

        <select class="data-filter__group-select chosen-select">
          <option value="Delivery">Campaign</option>
          <option value="Audience" selected>Placement</option>
          <option value="Category">Format</option>
          <option value="Format">Features</option>
        </select>

        <div class="data-filter__placement-select">

          <input type="radio" id="check-SS1" name="placement-select" checked/>
          <label for="check-SS1"><span></span><%= chartData.SS1Pre.name %></label>

          <input type="radio" id="check-SS2" name="placement-select"/>
          <label for="check-SS2"><span></span><%= chartData.SS2Pre.name %></label>

        </div>

        <h2>Split by:</h2>

        <select class="data-filter__split-select chosen-select">
          <option value="Delivery">Sites</option>
          <option value="Audience">Location</option>
          <option value="Category">Gender</option>
          <option value="Format">Category</option>
        </select>


        <div id="treemap" class="data-filter__treemap">
          <div class="dm">Daily Mail</div>
          <div class="smh">SMH</div>
          <div class="elle">Elle</div>
          <div class="roar">The Roar</div>
          <div class="bm">Big Mobile</div>
          <div class="giz">Gizmodo</div>
          <div class="junk">Junkee</div>
          <div class="cnet">CNet</div>
          <div class="huff">Huffington Post</div>
          <div class="mix">In The Mix</div>
        </div>

      </div>

    </div>

    <div class="charts grid-cell grid10 no-gutter">
      <div id="chart--execImpsAgg" class="grid-cell grid12"></div>
      <div id="chart--vAv" class="grid-cell grid6"></div>
    </div>

    <div class="footer grid-cell grid12 no-gutter">
        Footer
    </div>

  </div>





  <% include partials/footer.html.ejs %>
